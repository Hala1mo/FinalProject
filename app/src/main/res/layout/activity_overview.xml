<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imageView1"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:src="@drawable/rixos2" />

        <TextView
            android:id="@+id/titleTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:text="Overview"
            android:textColor="#bc9e82"
            android:textSize="24sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/descriptionTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="5dp"
            android:textColor="#bc9e82"
            android:text="Rixos Sharm El Sheikh, surrounded by pine trees on the Mediterranean coast, offers a stunning retreat. Its vast sandy beaches and magnificent landscape make it a destination of natural beauty. Located amidst historical, cultural, and natural wonders, including the Taurus Mountains, national parks, and archaeological sites, it provides a captivating experience. Rixos Premium Belek goes beyond luxury, offering a vacation culture filled with extraordinary rituals. From the captivating blue sea and enchanting nature to the pristine beach, talented chefs creating a gastronomic culture, sparkling entertainment, engaging games fostering discovery, and a sports culture igniting motivation, it promises a unique and unforgettable vacation for all."
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/companyLogoImageView"
            android:layout_width="410dp"
            android:layout_height="200dp"
            android:src="@drawable/aboutus"
            android:scaleType="centerCrop"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="8dp"/>

        <LinearLayout
            android:id="@+id/infoLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="8dp">

            <TextView
                android:id="@+id/teamTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"/>

            <!-- Add other information views here -->

            <TextView
                android:id="@+id/contactTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Contact Information"
                android:textColor="#bc9e82"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_marginStart="5dp"
                />

            <TextView
                android:id="@+id/emailTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Email: sharmelsheikh@rixos.com"
                android:layout_marginTop="2dp"
                android:layout_marginStart="5dp"
                android:autoLink="email"
                android:textColor="#bc9e82"
                android:linksClickable="true"/>


            <TextView
                android:id="@+id/phoneTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Phone:  +20 69 3710210"
                android:layout_marginTop="2dp"
                android:layout_marginStart="5dp"
                android:autoLink="phone"
                android:textColor="#bc9e82"
                android:linksClickable="true"/>


            <TextView
                android:id="@+id/addressTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Address: Egypt"
                android:layout_marginTop="2dp"
                android:layout_marginStart="5dp"
                android:autoLink="map"
                android:textColor="#bc9e82"
                android:linksClickable="true" />



        </LinearLayout>

    </LinearLayout>
</ScrollView>